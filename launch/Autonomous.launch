<?xml version="1.0"?>
<launch>
 <arg name="map_file" default="$(find metal_detector_bot)/map/map_of_metal_detector_robot.yaml"/>

   <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>


  <!-- AMCL -->
  <include file="$(find metal_detector_bot)/launch/amcl.launch"/>

  <!-- move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find metal_detector_bot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find metal_detector_bot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find metal_detector_bot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find metal_detector_bot)/config/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find metal_detector_bot)/config/base_local_planner_params.yaml" command="load" />
 </node>

</launch>